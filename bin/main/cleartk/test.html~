    <script>

    function test2(idValue,label,clause_id){
    	
   	switch(label){
   		case 'preference' :  
   			$("#" + clause_id).css("backgroundColor", "LightPink");
   			break;
   		
   		case 'activity' :  
   			$("#" + clause_id).css("backgroundColor", "LightSkyBlue"); 
   			break;
   		
   		case 'health' :  
   		
			$("#" + clause_id).css("backgroundColor", "LightGreen");
   			break;
   		
   		case 'people' :  
			$("#" + clause_id).css("backgroundColor", "Orange");
   			break;
   		default :
   			alert("ERROR");
   		
    	}
    	

    	
    	
	alert("You have labeled this clause as :" + label); 
        $.ajax({

          type: "POST",

          url: "test3.php",

          data: { id: idValue, tag: label}

        }).done(function( msg ) {

          alert( "Data Saved: " + msg );

        });

    }

    </script>
                                                 
